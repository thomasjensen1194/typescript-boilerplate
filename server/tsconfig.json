{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "../build/server",
    "removeComments": true,
    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "alwaysStrict": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "baseUrl": "server",
    "esModuleInterop": true,
    /* TypeORM */
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["./**/*"]
}
